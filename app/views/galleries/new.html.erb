/     = f.input :address, required: true
/     = f.input :images, as: :file, multiple: true
/     = f.submit  -->

<%= form_for(@gallery, url: '/api/v1/galleries') do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>